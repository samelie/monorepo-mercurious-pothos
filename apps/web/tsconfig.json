{
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "node"
  },
  "extends": "../../tsconfig.json",
  "lib": ["esnext"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "paths": {
    "@/*": [
      "./src/*" // set path `@/*` as alias of `src/*`
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}